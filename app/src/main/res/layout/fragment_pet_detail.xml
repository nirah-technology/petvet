<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentPetDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.PetDetailFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="34dp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:text="TextView" />

    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Espèce"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:padding="3dip" />
            <TextView
                android:text="Espèce de l'animal..."
                android:id="@+id/petSpecies"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Race"
                android:padding="3dip" />
            <TextView
                android:id="@+id/petBreed"
                android:text="Race de l'espèce animal..."
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Sexe"
                android:padding="3dip" />
            <TextView
                android:id="@+id/petSexe"
                android:text="Sexe animal..."
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Date de naissance"
                android:padding="3dip" />
            <TextView
                android:id="@+id/petBirthDate"
                android:text="Race de l'espèce animal..."
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Date d'adoption"
                android:padding="3dip" />
            <TextView
                android:id="@+id/petAdoptionDate"
                android:text="Race de l'espèce animal..."
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Poids (kg)"
                android:padding="3dip" />
            <TextView
                android:id="@+id/petWeight"
                android:text="Poids animal..."
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/openHealthBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_health_book" />

        <ImageButton
            android:id="@+id/openPetCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:src="@drawable/baseline_calendar_month_24" />
    </LinearLayout>

</LinearLayout>