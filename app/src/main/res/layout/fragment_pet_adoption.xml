<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.adoption.PetAdoptionFragment"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.adoption.PetAdoptionFragment">

    <!-- Name -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextAnimalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Nom de l'animal">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Espece -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Espèce animal">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Race -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Race de l'espèce animal">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Genre -->


        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femelle"
                />
            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                />
            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hermaphodite"
                />
        </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- Date de naissance -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayoutBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        android:layout_marginBottom="20dp"
        app:endIconDrawable="@drawable/calendar_month_24dp_fill0_wght400_grad0_opsz24"
        android:hint="Date de naissance*">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Date d'adoption -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayoutAdoptionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        android:layout_marginBottom="20dp"
        app:endIconDrawable="@drawable/calendar_month_24dp_fill0_wght400_grad0_opsz24"
        android:hint="Date d'adoption">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAdoptionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action -->


    <Button
        android:id="@+id/confirmAdoptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_confirm"
        android:text="Confirmer" />



</LinearLayout>
</androidx.core.widget.NestedScrollView>
